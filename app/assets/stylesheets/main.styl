txtColor = #222222

*, *:before, *:after
  box-sizing border-box

body
  margin 40px
  font-family 'Open Sans', 'sans-serif'
  background-color #fff
  color #444

h1, p
  margin 0 0 1em 0

.wrapper
  margin 0 20px
  display grid
  grid-gap 10px
  & > *
    background-color #eee
    color txtColor
    border-radius 5px
    padding 20px
    font-size 150%
    margin-bottom 10px

@media screen and (min-width: 500px)
  .sidebar
    float left
    width 19.1489%
  .content
    float right
    width 79.7872%
  .wrapper
    margin 0 auto
    grid-template-columns 1fr 3fr
  .header, .footer
    grid-column 1 / -1
    clear both

@supports (display: grid)
  .wrapper > *
    width auto
    margin 0

li
  list-style-type none

.header>ul>li
    display inline-block
    & > a
      text-decoration none
      color txtColor

.sidebar>ul>li
      cursor pointer